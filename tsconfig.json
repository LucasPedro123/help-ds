{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "jsx": "react", // responsavel por transformar o jsx em codigo react
    "module": "ESNext", // ele gera modulos de javascript moderno
    "declaration": true, // gerar o arquivo.d.ts
    "declarationDir": "types", // cima
    "sourceMap": true, // mapear os codigos de javascript
    "outDir": "dist", // codigo depurado do sourceMap
    "moduleResolution": "node", // regras do node pra encontrar o modulo
    "allowSyntheticDefaultImports": true, // assumir as importacoes padroes
    "emitDeclarationOnly": true // exporta as tipagens
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "preview/**/*",
  ]
}
